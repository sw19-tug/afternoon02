<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ultimategames">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ExtendWords"
            android:parentActivityName=".HangmanSelScreen" />
        <activity android:name="com.example.TicTacToe.PvC"
            android:label="@string/title_activity_tic_tac_toe_pvc"
            android:parentActivityName="com.example.TicTacToe.TicTacToe_WelcomeScreen"/>
        <activity android:name=".HangmanSelScreen"
            android:parentActivityName=".WelcomeScreenActivity"></activity>
        <activity
            android:name=".GameHangman"
            android:parentActivityName=".HangmanSelScreen"
            android:label="@string/title_activity_hangman_welcome_screen"
            ></activity>
        <activity
            android:name="com.example.TicTacToe.TicTacToe_WelcomeScreen"
            android:label="@string/title_activity_tic_tac_toe__welcome_screen"
            android:parentActivityName=".WelcomeScreenActivity"></activity>
        <activity android:name="com.example.TicTacToe.TicTacToePvP_Activity"
            android:label="@string/title_activity_tic_tac_toe_pvp"
            android:parentActivityName="com.example.TicTacToe.TicTacToe_WelcomeScreen"/>
        <activity
            android:name=".WelcomeScreenActivity"
            android:parentActivityName=".MainActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".TouchTheBlock.TTB_Activity"

            android:label="@string/title_activity_touch_the_block"
            android:parentActivityName=".WelcomeScreenActivity">
            <intent-filter>
                <action android:name=".TouchTheBlock.TTB_Activity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>