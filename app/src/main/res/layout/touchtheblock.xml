<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/bt_Backround"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/Rel_Backround"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="56dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/countdown_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/btnFindMe"
            android:layout_alignRight="@+id/btnFindMe"
            android:layout_alignBottom="@+id/textView"
            android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginBottom="399dp"
            android:text="10:00" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btnFindMe"
            android:layout_alignEnd="@+id/btnFindMe"
            android:layout_alignRight="@+id/btnFindMe"
            android:layout_marginEnd="-23dp"
            android:layout_marginRight="-23dp"
            android:layout_marginBottom="442dp"
            android:text="Touch the block game" />

        <Button
            android:id="@+id/bt_block"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_above="@+id/btnFindMe"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="89dp"
            android:layout_marginLeft="89dp"
            android:layout_marginBottom="56dp"
            android:background="#000000"
            tools:layout_editor_absoluteX="105dp"
            tools:layout_editor_absoluteY="265dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginStart="104dp"
            android:layout_marginLeft="104dp"
            android:layout_marginTop="424dp"
            android:text="" />

        <Button
            android:id="@+id/btnFindMe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView"
            android:layout_centerInParent="true"
            android:layout_marginStart="160dp"
            android:layout_marginLeft="160dp"
            android:layout_marginBottom="-64dp"
            android:gravity="center"></Button>

    </RelativeLayout>


</android.support.constraint.ConstraintLayout>