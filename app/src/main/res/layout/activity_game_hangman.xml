<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameHangman"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="_"
            android:textSize="36sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="221dp"
        android:layout_weight="2"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/hangman" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Need Help" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="216dp"
        android:orientation="vertical">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                android:layout_gravity="center"
                android:orientation="vertical"
                android:weightSum="7">

                <Button
                    android:id="@+id/button_a"
                    style="@style/CharacterButton"
                    android:text="A" />

                <Button
                    android:id="@+id/button_b"
                    style="@style/CharacterButton"
                    android:text="B" />

                <Button
                    android:id="@+id/button_c"
                    style="@style/CharacterButton"
                    android:text="C" />

                <Button
                    android:id="@+id/button_d"
                    style="@style/CharacterButton"
                    android:text="D" />

                <Button
                    android:id="@+id/button_e"
                    style="@style/CharacterButton"
                    android:text="E" />

                <Button
                    android:id="@+id/button_f"
                    style="@style/CharacterButton"
                    android:text="F" />

                <Button
                    android:id="@+id/button_g"
                    style="@style/CharacterButton"
                    android:text="G" />

            </TableRow>

            <TableRow
                android:layout_gravity="center"
                android:orientation="vertical"
                android:weightSum="7">

                <Button
                    android:id="@+id/button_h"
                    style="@style/CharacterButton"
                    android:text="H" />

                <Button
                    android:id="@+id/button_i"
                    style="@style/CharacterButton"
                    android:text="I" />

                <Button
                    android:id="@+id/button_j"
                    style="@style/CharacterButton"
                    android:text="J" />

                <Button
                    android:id="@+id/button_k"
                    style="@style/CharacterButton"
                    android:text="K" />

                <Button
                    android:id="@+id/button_l"
                    style="@style/CharacterButton"
                    android:text="L" />

                <Button
                    android:id="@+id/button_m"
                    style="@style/CharacterButton"
                    android:text="M" />

                <Button
                    android:id="@+id/button_n"
                    style="@style/CharacterButton"
                    android:text="N" />

            </TableRow>

            <TableRow
                android:layout_gravity="center"
                android:orientation="vertical"
                android:weightSum="7">

                <Button
                    android:id="@+id/button_o"
                    style="@style/CharacterButton"
                    android:text="O" />

                <Button
                    android:id="@+id/button_p"
                    style="@style/CharacterButton"
                    android:text="P" />

                <Button
                    android:id="@+id/button_q"
                    style="@style/CharacterButton"
                    android:text="Q" />

                <Button
                    android:id="@+id/button_r"
                    style="@style/CharacterButton"
                    android:text="R" />

                <Button
                    android:id="@+id/button_s"
                    style="@style/CharacterButton"
                    android:text="S" />

                <Button
                    android:id="@+id/button_t"
                    style="@style/CharacterButton"
                    android:text="T" />

                <Button
                    android:id="@+id/button_u"
                    style="@style/CharacterButton"
                    android:text="U" />

            </TableRow>

            <TableRow
                android:layout_gravity="center"
                android:orientation="vertical"
                android:weightSum="7">

                <Button
                    android:id="@+id/button_v"
                    style="@style/CharacterButton"
                    android:text="V" />

                <Button
                    android:id="@+id/button_w"
                    style="@style/CharacterButton"
                    android:text="W" />

                <Button
                    android:id="@+id/button_x"
                    style="@style/CharacterButton"
                    android:layout_height="match_parent"
                    android:text="X" />

                <Button
                    android:id="@+id/button_y"
                    style="@style/CharacterButton"
                    android:text="Y" />

                <Button
                    android:id="@+id/button_z"
                    style="@style/CharacterButton"
                    android:text="Z" />

            </TableRow>

        </TableLayout>

    </LinearLayout>

</LinearLayout>