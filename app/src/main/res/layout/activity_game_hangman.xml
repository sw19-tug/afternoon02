<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameHangman"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/hangman_title"
            android:textAlignment="center"
            android:textColor="@color/colorDefaultBlue"
            android:textSize="30sp"
            android:padding="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:textAlignment="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="@string/move_number"
                android:textSize="20sp"
                android:padding="5dp"/>

            <TextView
                android:id="@+id/text_move_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textSize="20sp"
                tools:text="@tools:sample/date/hhmm" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_weight="7">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/image_hangman"
            android:src="@drawable/hangman"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                android:orientation="vertical"
                android:weightSum="7"
                android:layout_gravity="center">

                <Button
                    android:id="@+id/button_a"
                    style="@style/CharacterButton"
                    android:text="A"/>

                <Button
                    android:id="@+id/button_b"
                    style="@style/CharacterButton"
                    android:text="B"/>

                <Button
                    android:id="@+id/button_c"
                    style="@style/CharacterButton"
                    android:text="C"/>

                <Button
                    android:id="@+id/button_d"
                    style="@style/CharacterButton"
                    android:text="D"/>

                <Button
                    android:id="@+id/button_e"
                    style="@style/CharacterButton"
                    android:text="E"/>

                <Button
                    android:id="@+id/button_f"
                    style="@style/CharacterButton"
                    android:text="F"/>

                <Button
                    android:id="@+id/button_g"
                    style="@style/CharacterButton"
                    android:text="G"/>

            </TableRow>
            <TableRow
                android:orientation="vertical"
                android:weightSum="7"
                android:layout_gravity="center">

                <Button
                    android:id="@+id/button_h"
                    style="@style/CharacterButton"
                    android:text="H"/>

                <Button
                    android:id="@+id/button_i"
                    style="@style/CharacterButton"
                    android:text="I"/>

                <Button
                    android:id="@+id/button_j"
                    style="@style/CharacterButton"
                    android:text="J"/>

                <Button
                    android:id="@+id/button_k"
                    style="@style/CharacterButton"
                    android:text="K"/>

                <Button
                    android:id="@+id/button_l"
                    style="@style/CharacterButton"
                    android:text="L"/>

                <Button
                    android:id="@+id/button_m"
                    style="@style/CharacterButton"
                    android:text="M"/>

                <Button
                    android:id="@+id/button_n"
                    style="@style/CharacterButton"
                    android:text="N"/>

            </TableRow>
            <TableRow
                android:orientation="vertical"
                android:weightSum="7"
                android:layout_gravity="center">

                <Button
                    android:id="@+id/button_o"
                    style="@style/CharacterButton"
                    android:text="O"/>

                <Button
                    android:id="@+id/button_p"
                    style="@style/CharacterButton"
                    android:text="P"/>

                <Button
                    android:id="@+id/button_q"
                    style="@style/CharacterButton"
                    android:text="Q"/>

                <Button
                    android:id="@+id/button_r"
                    style="@style/CharacterButton"
                    android:text="R"/>

                <Button
                    android:id="@+id/button_s"
                    style="@style/CharacterButton"
                    android:text="S"/>

                <Button
                    android:id="@+id/button_t"
                    style="@style/CharacterButton"
                    android:text="T"/>

                <Button
                    android:id="@+id/button_u"
                    style="@style/CharacterButton"
                    android:text="U"/>

            </TableRow>
            <TableRow
                android:orientation="vertical"
                android:weightSum="7"
                android:layout_gravity="center">

                <Button
                    android:id="@+id/button_v"
                    style="@style/CharacterButton"
                    android:text="V"/>

                <Button
                    android:id="@+id/button_w"
                    style="@style/CharacterButton"
                    android:text="W"/>

                <Button
                    android:id="@+id/button_x"
                    style="@style/CharacterButton"
                    android:text="X"/>

                <Button
                    android:id="@+id/button_y"
                    style="@style/CharacterButton"
                    android:text="Y"/>

                <Button
                    android:id="@+id/button_z"
                    style="@style/CharacterButton"
                    android:text="Z"/>

            </TableRow>

        </TableLayout>

    </LinearLayout>

</LinearLayout>